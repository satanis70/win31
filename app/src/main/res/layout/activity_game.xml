<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/activity_game_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:textSize="26sp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/textView_usedLetters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_word" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_again">

        <Button
            android:id="@+id/a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/b"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="B"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/a"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/c"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="C"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/b"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/d"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="D"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/c"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/e"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="E"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/d"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/f"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="F"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/e"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/g"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="G"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/f"
            app:layout_constraintTop_toTopOf="parent"></Button>

        <Button
            android:id="@+id/h"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="H"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a"></Button>

        <Button
            android:id="@+id/i"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="I"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/h"
            app:layout_constraintTop_toBottomOf="@+id/b"></Button>

        <Button
            android:id="@+id/j"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="J"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/i"
            app:layout_constraintTop_toBottomOf="@+id/c"></Button>

        <Button
            android:id="@+id/k"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="K"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/j"
            app:layout_constraintTop_toBottomOf="@+id/d"></Button>

        <Button
            android:id="@+id/l"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="L"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/k"
            app:layout_constraintTop_toBottomOf="@+id/e"></Button>

        <Button
            android:id="@+id/m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="M"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/l"
            app:layout_constraintTop_toBottomOf="@+id/f"></Button>

        <Button
            android:id="@+id/n"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="N"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/m"
            app:layout_constraintTop_toBottomOf="@+id/g"></Button>

        <Button
            android:id="@+id/o"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="O"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/h"></Button>

        <Button
            android:id="@+id/p"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:text="P"
            app:layout_constraintStart_toEndOf="@+id/o"
            app:layout_constraintTop_toBottomOf="@+id/i"></Button>

        <Button
            android:id="@+id/q"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Q"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/p"
            app:layout_constraintTop_toBottomOf="@+id/j"></Button>

        <Button
            android:id="@+id/r"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="R"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/q"
            app:layout_constraintTop_toBottomOf="@+id/k"></Button>

        <Button
            android:id="@+id/s"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="S"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/r"
            app:layout_constraintTop_toBottomOf="@+id/l"></Button>

        <Button
            android:id="@+id/t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="T"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/s"
            app:layout_constraintTop_toBottomOf="@+id/m"></Button>

        <Button
            android:id="@+id/u"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="U"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/t"
            app:layout_constraintTop_toBottomOf="@+id/n"></Button>

        <Button
            android:id="@+id/v"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="V"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/o"></Button>

        <Button
            android:id="@+id/w"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="W"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/v"
            app:layout_constraintTop_toBottomOf="@+id/p"></Button>

        <Button
            android:id="@+id/x"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="X"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/w"
            app:layout_constraintTop_toBottomOf="@+id/q"></Button>

        <Button
            android:id="@+id/y"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Y"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/x"
            app:layout_constraintTop_toBottomOf="@+id/r"></Button>

        <Button
            android:id="@+id/z"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Z"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/y"
            app:layout_constraintTop_toBottomOf="@+id/s"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="Start new game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_usedLetters" />

    <TextView
        android:id="@+id/textView_winlos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>